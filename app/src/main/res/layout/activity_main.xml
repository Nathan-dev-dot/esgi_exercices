<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Booking"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        app:fontFamily="@font/jakarta"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/ic_empty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have no bookings yet"
        android:textStyle="bold"
        android:textSize="15dp"
        app:fontFamily="@font/jakarta"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_empty" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
        android:textStyle="normal"
        android:textSize="11dp"
        app:fontFamily="@font/jakarta"
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="@+id/ic_empty"
        app:layout_constraintStart_toStartOf="@+id/ic_empty"
        app:layout_constraintTop_toBottomOf="@+id/ic_empty"
        android:gravity="center"
        android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>